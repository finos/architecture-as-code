{
  "name": "@finos/calm-cli",
  "version": "0.6.0",
  "description": "A set of tools for interacting with the Common Architecture Language Model (CALM)",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "bin": {
    "calm": "dist/index.js"
  },
  "scripts": {
    "build": "tsup && npm run copy-calm-schema && npm run copy-docify-templates",
    "watch": "node watch.mjs",
    "copy-calm-schema": "copyfiles \"../calm/draft/2024-10/meta/*\" dist/calm/",
    "copy-docify-templates": "copyfiles \"../shared/src/docify/template-bundles/**/*\" dist --up 4",
    "test": "vitest run",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "dependency-check": "dependency-check --project 'calm-cli' --scan . --out ./dependency-check-report --format ALL --suppression ../.github/node-cve-ignore-list.xml"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "validation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^13.0.0",
    "copyfiles": "^2.4.1",
    "mkdirp": "^3.0.1",
    "express-rate-limit": "^7.5.0"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "jest-environment-node": "^29.7.0",
    "axios": "^1.7.9",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/json-pointer": "^1.0.34",
    "@types/junit-report-builder": "^3.0.2",
    "@types/lodash": "^4.17.0",
    "@types/node": "^22.10.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.15.0",
    "chokidar": "^4.0.1",
    "eslint": "^9.13.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "link": "^2.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.4.3",
    "xml2js": "^0.6.2"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
