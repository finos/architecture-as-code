    "@types/jest": "^29.5.14",
    "@types/json-pointer": "^1.0.34",
    "@types/junit-report-builder": "^3.0.2",
    "@types/lodash": "^4.17.0",
    "@types/xml2js": "^0.4.14",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.3",
    "xml2js": "^0.6.2"
