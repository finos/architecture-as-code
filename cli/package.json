{
  "name": "@finos/calm-cli",
  "version": "0.2.6",
  "description": "A set of tools for interacting with the Common Architecture Language Model (CALM)",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch -p ./",
