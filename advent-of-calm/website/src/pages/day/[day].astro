---
import Layout from '../../layouts/Layout.astro';
import { isUnlocked, getDayTitle } from '../../utils/calendar';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allDays = await getCollection('days');
  
  return allDays.map(entry => ({
    params: { day: entry.slug.replace('day-', '') },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const dayNum = parseInt(entry.slug.replace('day-', ''));

const title = getDayTitle(dayNum);
const prevDay = dayNum > 1 ? dayNum - 1 : null;
const nextDay = dayNum < 24 ? dayNum + 1 : null;
const nextUnlocked = nextDay && isUnlocked(nextDay);
---

<Layout title={`Day ${dayNum}: ${title}`} description={title}>
  <nav class="day-nav">
    <div class="nav-left">
      {prevDay && (
        <a href={`/day/${prevDay}`} class="nav-button prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
          Day {prevDay}
        </a>
      )}
    </div>
    <div class="nav-center">
      <a href="/" class="nav-button home">Calendar</a>
    </div>
    <div class="nav-right">
      {nextDay && nextUnlocked && (
        <a href={`/day/${nextDay}`} class="nav-button next">
          Day {nextDay}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </a>
      )}
      {nextDay && !nextUnlocked && (
        <span class="nav-button next locked" title={`Unlocks December ${nextDay}`}>
          Day {nextDay}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
        </span>
      )}
    </div>
  </nav>
  
  <article class="day-content prose">
    <Content />
  </article>
  
  <nav class="day-nav bottom">
    <div class="nav-left">
      {prevDay && (
        <a href={`/day/${prevDay}`} class="nav-button prev">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
          Day {prevDay}
        </a>
      )}
    </div>
    <div class="nav-center">
      <a href="/" class="nav-button home">Back to Calendar</a>
    </div>
    <div class="nav-right">
      {nextDay && nextUnlocked && (
        <a href={`/day/${nextDay}`} class="nav-button next">
          Day {nextDay}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </a>
      )}
      {nextDay && !nextUnlocked && (
        <span class="nav-button next locked" title={`Unlocks December ${nextDay}`}>
          Day {nextDay}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
        </span>
      )}
    </div>
  </nav>
</Layout>

<style>
  .day-nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-md);
    border-bottom: 2px solid var(--color-border);
  }
  
  .nav-left {
    justify-self: start;
  }
  
  .nav-center {
    justify-self: center;
  }
  
  .nav-right {
    justify-self: end;
  }
  
  .day-nav.bottom {
    margin-top: var(--spacing-xl);
    margin-bottom: 0;
    padding-top: var(--spacing-md);
    padding-bottom: 0;
    border-bottom: none;
    border-top: 2px solid var(--color-border);
  }
  
  .nav-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--color-accent);
    color: white;
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: all 0.2s;
    text-decoration: none;
  }
  
  .nav-button:hover {
    background: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }
  
  .nav-button svg {
    width: 16px;
    height: 16px;
  }
  
  .nav-button.home {
    background: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }
  
  .nav-button.home:hover {
    background: var(--color-accent);
    color: white;
  }
  
  .nav-button.locked {
    background: var(--color-locked);
    cursor: not-allowed;
    opacity: 0.6;
  }
  
  .day-content {
    max-width: 900px;
  }
  
  /* Prose/Typography Styles */
  .day-content :global(h1) {
    font-size: 2.25rem;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
    color: var(--color-primary);
  }
  
  .day-content :global(h2) {
    font-size: 1.75rem;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-xs);
    border-bottom: 2px solid var(--color-accent-light);
    color: var(--color-primary);
  }
  
  .day-content :global(h3) {
    font-size: 1.35rem;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }
  
  .day-content :global(h4) {
    font-size: 1.1rem;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
  }
  
  .day-content :global(p) {
    margin-bottom: var(--spacing-md);
    line-height: 1.7;
  }
  
  .day-content :global(ul),
  .day-content :global(ol) {
    margin-bottom: var(--spacing-md);
    margin-left: var(--spacing-lg);
    line-height: 1.8;
  }
  
  .day-content :global(li) {
    margin-bottom: var(--spacing-xs);
  }
  
  .day-content :global(li p) {
    margin-bottom: var(--spacing-xs);
  }
  
  .day-content :global(pre) {
    background: #1f2937;
    color: #f9fafb;
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
    line-height: 1.5;
    border-left: 4px solid var(--color-accent);
  }
  
  .day-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.9em;
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  }
  
  .day-content :global(code) {
    background: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.875em;
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    color: #1f2937;
  }
  
  .day-content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--spacing-md);
    margin: var(--spacing-md) 0;
    color: var(--color-text-light);
    font-style: italic;
  }
  
  .day-content :global(strong) {
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .day-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }
  
  .day-content :global(a:hover) {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .day-nav {
      flex-wrap: wrap;
    }
    
    .nav-button {
      font-size: 0.9rem;
      padding: 6px 12px;
    }
    
    .day-content :global(h1) {
      font-size: 1.75rem;
    }
    
    .day-content :global(h2) {
      font-size: 1.5rem;
    }
  }
</style>
