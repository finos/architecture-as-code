{
  "name": "@finos/calm-workspace",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "calm-cli",
    "docs",
    "calm-hub-ui"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:calm-cli": "npm run build --workspace shared --workspace calm-cli",
    "build:docs": "npm run build --workspace docs",
    "test": "npm run test --workspaces --if-present",
    "test:calm-cli": "npm run build:calm-cli && npm run test --workspace calm-cli",
    "lint": "npm run lint --workspaces --if-present",
    "lint-fix": "npm run lint-fix --workspaces --if-present",
    "watch": "run-p watch:calm-cli watch:shared",
    "watch:calm-cli": "npm run watch --workspace calm-cli",
    "watch:shared": "npm run watch --workspace shared",
    "link:calm-cli": "npm link --workspace calm-cli",
    "calm-hub-ui:run": "npm run start --workspace calm-hub-ui"
  },
  "devDependencies": {
    "link": "^2.1.1",
    "npm-run-all2": "^5.0.0",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "@finos/calm-shared": "^0.2.2"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
