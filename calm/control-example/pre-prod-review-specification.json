{
  "$schema": "../draft/2024-08/meta/control.json#defs/control-requirement",
  "$id": "control-specification.json",
  "title": "Example Production Control Specification",
  "properties": {
    "control-id": {
      "const": "ci-arch-001"
    },
    "name": {
      "const": "Architecture review pre-production"
    },
    "description": {
      "const": "As part of the SDLC requirements, each workload going to production is subject to an architecture review"
    },
    "scope-text": {
      "const": "All workloads going to production"
    },
    "scope-rego": {
      "const": "input.metadata.target-deployment.environment == Production"
    },
    "data-fields": {
      "type": "object",
      "properties": {
        "review-date": {
          "type": "string",
          "format": "date"
        },
        "reviewed-by": {
          "type": "string"
        },
        "docs-link": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "review-date",
        "reviewed-by",
        "docs-link"
      ]
    }
  },
  "required": [
    "control-id",
    "name",
    "description",
    "scope-text",
    "scope-rego"
  ]
}