{
    "$schema": "https://calm.finos.org/release/1.0/meta/calm.json",
    "$id": "https://calm.finos.org/draft/2025-03/prototype/anyof/pattern.json",
    "title": "Pattern Options Issue",
    "type": "object",
    "properties": {
        "nodes": {
            "type": "array",
            "maxItems": 2,
            "prefixItems": [
                {
                    "$ref": "https://calm.finos.org/release/1.0/meta/core.json#/defs/node",
                    "type": "object",
                    "properties": {
                        "unique-id": {
                            "const": "node-1"
                        },
                        "name": {
                            "const": "Node 1"
                        },
                        "node-type": {
                            "const": "service"
                        }
                    }
                },
                {
                    "$ref": "https://calm.finos.org/release/1.0/meta/core.json#/defs/node",
                    "type": "object",
                    "properties": {
                        "unique-id": {
                            "const": "node-2"
                        },
                        "name": {
                            "const": "Node 2"
                        },
                        "node-type": {
                            "const": "service"
                        }
                    }
                }
            ]
        },
        "relationships": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "prefixItems": [
                {
                    "$ref": "https://calm.finos.org/release/1.0/meta/core.json#/defs/relationship",
                    "type": "object",
                    "properties": {
                        "unique-id": {
                            "const": "options"
                        },
                        "description": {
                            "const": "Which databases does your application connect to?"
                        },
                        "relationship-type": {
                            "type": "object",
                            "properties": {
                                "options": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 1,
                                    "prefixItems": [
                                        {
                                            "$ref": "https://calm.finos.org/release/1.0/meta/core.json#/defs/decision",
                                            "type": "object",
                                            "properties": {
                                                "description": {
                                                    "const": "Both Nodes"
                                                },
                                                "nodes": {
                                                    "const": [
                                                        "node-1",
                                                        "node-2"
                                                    ]
                                                },
                                                "relationships": {
                                                    "const": []
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        }
    },
    "required": ["nodes", "relationships"]
}
